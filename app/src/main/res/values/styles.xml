<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- Default card icon -->
    <style name="standard_icon">
        <item name="android:layout_width">@dimen/standard_icon_width</item>
        <item name="android:layout_height">@dimen/standard_icon_height</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="standard_card_top_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:textSize">7pt</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
    </style>

    <style name="standard_card_sub_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:textSize">6pt</item>
        <item name="android:ellipsize">marquee</item>

        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:singleLine">true</item>
    </style>

    android:layout_width="match_parent"
    android:imeOptions="actionSearch"
    android:inputType="text"
    android:hint="@string/editText_hint"
    android:freezesText="true"
    android:layout_marginLeft="5dp"
    android:paddingLeft="10dp"
    android:layout_height="wrap_content"
    android:layout_marginRight="5dp"

    <style name="editText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:imeOptions">actionSearch</item>

        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">text</item>
        <item name="android:freezesText">true</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="standard_listview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginBottom">@dimen/activity_horizontal_margin</item>
    </style>


</resources>
